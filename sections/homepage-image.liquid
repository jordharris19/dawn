{% comment %}
  Product Grid Section
  A responsive grid section with 12 image slots for showcasing products/categories
{% endcomment %}

{%- liquid
  assign section_id = 'product-grid-' | append: section.id
-%}

<style>
  .homepage-grid-section {
    padding: 60px 0;
    background-color: {{ section.settings.background_color | default: '#ffffff' }};
  }
  
  .homepage-grid-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .homepage-grid {
    display: grid;
    gap: 20px;
    grid-template-columns: repeat({{ section.settings.columns_desktop | default: 4 }}, 1fr);
  }
  
  .homepage-grid-item {
    position: relative;
    overflow: hidden;
    border-radius: 8px;
    background-color: #f8f8f8;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    aspect-ratio: 1;
  }
  
  /* Wide item spans 2 columns - ALWAYS take priority */
  .homepage-grid-item.wide {
    grid-column: span 2 !important;
    aspect-ratio: 2 / 1 !important;
  }
  
  /* Auto-expand last items to fill row in 4-column layout */
  {% if section.settings.columns_desktop == '4' %}
    /* If last 2 items are in a partial row (positions 3-4 of a 4-column grid) */
    .homepage-grid-item:nth-child(4n + 3):nth-last-child(2):not(.wide) {
      grid-column: span 2;
      aspect-ratio: 2 / 1;
    }
    .homepage-grid-item:nth-child(4n):nth-last-child(1):not(.wide) {
      grid-column: span 2;
      aspect-ratio: 2 / 1;
    }
    
    /* If last item is alone in row */
    .homepage-grid-item:nth-child(4n + 1):last-child:not(.wide),
    .homepage-grid-item:nth-child(4n + 2):last-child:not(.wide),
    .homepage-grid-item:nth-child(4n + 3):last-child:not(.wide) {
      grid-column: span 2;
      aspect-ratio: 2 / 1;
    }
  {% endif %}
  
  .homepage-grid-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  }
  
  .homepage-grid-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .homepage-grid-item:hover .homepage-grid-image {
    transform: scale(1.05);
  }
  
  .homepage-grid-overlay {
    position: absolute;
    color: #fff;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
  }

  .homepage-grid-overlay .homepage-grid-item-title,
  .homepage-grid-overlay .homepage-grid-item-subtitle {
    text-shadow: 0px 2px 6px rgba(0,0,0,0.6);
  }
  
  .homepage-grid-item-title {
    font-size: 2.4rem;
    font-weight: 500;
    margin-bottom: 5px;
  }
  
  .homepage-grid-item-subtitle {
    font-size: 1.5rem;
    opacity: 0.9;
  }
  
  .homepage-grid-link {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 2;
    text-decoration: none;
    color: inherit;
  }
  
  /* Responsive Design */
  @media (max-width: 1024px) {
    .homepage-grid {
      grid-template-columns: repeat({% if section.settings.columns_desktop >= 4 %}3{% else %}2{% endif %}, 1fr);
    }
  }
  
  @media (max-width: 768px) {
    .homepage-grid-section {
      padding: 40px 0;
    }
    
    .homepage-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 480px) {
    .homepage-grid {
      grid-template-columns: 1fr;
      gap: 15px;
    }
    
    /* Wide items still span full width on mobile */
    .homepage-grid-item.wide {
      grid-column: span 1;
      aspect-ratio: 2 / 1;
    }
  }
</style>

<div class="homepage-grid-section" id="{{ section_id }}">
  <div class="homepage-grid-container">
    <div class="homepage-grid">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'image_item' %}
            {%- liquid
              # Auto-detect if image should be wide based on aspect ratio
              # Priority: checkbox setting OR aspect ratio > 1.5
              assign is_wide = false
              
              if block.settings.wide == true
                assign is_wide = true
              elsif block.settings.image != blank
                assign image_aspect = block.settings.image.aspect_ratio
                # If aspect ratio is greater than 1.5 (landscape), automatically make it wide
                if image_aspect > 1.5
                  assign is_wide = true
                endif
              endif
            -%}
            <div class="homepage-grid-item{% if is_wide %} wide{% endif %}" {{ block.shopify_attributes }}>
              {% if block.settings.image != blank %}
                {% if is_wide %}
                  <img 
                    src="{{ block.settings.image | image_url: width: 800 }}"
                    alt="{{ block.settings.image.alt | default: block.settings.title }}"
                    class="homepage-grid-image"
                    loading="lazy"
                    width="800"
                    height="400"
                  >
                {% else %}
                  <img 
                    src="{{ block.settings.image | image_url: width: 400 }}"
                    alt="{{ block.settings.image.alt | default: block.settings.title }}"
                    class="homepage-grid-image"
                    loading="lazy"
                    width="400"
                    height="400"
                  >
                {% endif %}
              {% else %}
                <div class="homepage-grid-image" style="background-color: #f0f0f0; display: flex; align-items: center; justify-content: center;">
                  <span style="color: #999; font-size: 0.9rem;">Add Image</span>
                </div>
              {% endif %}
              
              {% if block.settings.title != blank or block.settings.subtitle != blank %}
                <div class="homepage-grid-overlay">
                  {% if block.settings.title != blank %}
                    <div class="homepage-grid-item-title">{{ block.settings.title }}</div>
                  {% endif %}
                  {% if block.settings.subtitle != blank %}
                    <div class="homepage-grid-item-subtitle">{{ block.settings.subtitle }}</div>
                  {% endif %}
                </div>
              {% endif %}
              
              {% if block.settings.link != blank %}
                <a href="{{ block.settings.link }}" class="homepage-grid-link" aria-label="{{ block.settings.title | default: 'View item' }}">
                  <span class="visually-hidden">{{ block.settings.title | default: 'View item' }}</span>
                </a>
              {% endif %}
            </div>
        {% endcase %}
      {% endfor %}
    </div>
  </div>
</div>

